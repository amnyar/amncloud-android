<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/logo"
            android:layout_marginBottom="32dp" />

        <EditText
            android:id="@+id/phoneInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="شماره موبایل"
            android:textSize="16sp"
            android:inputType="phone"
            android:maxLength="11"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#6b6b6b9c"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/nameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="نام"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/familyInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="نام خانوادگی"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ایمیل"
            android:inputType="textEmailAddress"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/codeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="کد تایید ۶ رقمی"
            android:inputType="number"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFEB3B"
            android:textSize="14sp"
            android:text=""
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ارسال مجدد تا 59 ثانیه دیگر"
            android:textColor="#BBBBBB"
            android:textSize="13sp"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/sendCodeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="بزن بریم !"
            android:background="@drawable/btn_signup_background"
            android:textColor="#FFFFFF"
			android:backgroundTint="#4CAF50"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ثبت ‌نام"
            android:visibility="gone"
            android:textColor="#FFFFFF"
			android:backgroundTint="#4CAF50"
            android:background="@drawable/btn_register_background"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/verifyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تایید کد"
            android:visibility="gone"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_verify_background"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/resendCodeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ارسال مجدد کد"
            android:enabled="false"
            android:visibility="gone"
            android:alpha="0.4"
            android:textColor="#AAAAAA"
            android:background="@drawable/btn_resend_background"
            android:layout_marginBottom="12dp" />


        <Button
            android:id="@+id/backToLoginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="بازگشت به ورود"
            android:visibility="gone"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_register_background"
            android:layout_marginBottom="20dp" />
			

        <ImageView
            android:id="@+id/bottomImage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/bottom_image"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Bottom Decorative Image" />

    </LinearLayout>
</ScrollView>
